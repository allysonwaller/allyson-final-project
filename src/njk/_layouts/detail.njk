{% extends '_layouts/base.njk' %}

{% block content %}
<article class="container">
  <div class="row">
    <div class="col-sm-4 left-rail">
      {% block info %}
      <h1>{{ members.name }}</h1>
      <h2>{{ members.instruments }}</h2>
      <h3>{{ members.birthdate }}</h3> 
      <h4>{{ members.birthplace }}</h4>

      <p>{{ members.text}}</p>
      {% endblock %}
    </div>
    <div class="col-sm-8">
      {% block story %}{% endblock %}
    </div>
  </div>
</article>
{% endblock %}
